// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum Role {
  USER
  SUPERADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  username  String?   @unique
  email     String    @unique
  password  String
  isVerified Boolean  @default(false) @map("is_verified")
  role      Role      @default(USER)
  degreeId  Int?      @map("degree_id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  degree    Degree?   @relation(fields: [degreeId], references: [id])
  subjects  Subject[]
  verificationCodes VerificationCode[]

  @@map("users")
}

model Degree {
  id               Int      @id @default(autoincrement())
  name             String
  totalYears       Int      @default(3) @map("total_years")
  semestersPerYear Int      @default(2) @map("semesters_per_year")
  isCustom         Boolean  @default(false) @map("is_custom")
  createdByUserId  Int?     @map("created_by_user_id")
  createdAt        DateTime @default(now()) @map("created_at")
  users            User[]
  subjectTemplates DegreeSubjectTemplate[]

  @@map("degrees")
}

model DegreeSubjectTemplate {
  id          Int      @id @default(autoincrement())
  degreeId    Int      @map("degree_id")
  subjectName String   @map("subject_name")
  credits     Float
  year        Int
  semester    Int
  createdAt   DateTime @default(now()) @map("created_at")

  degree Degree @relation(fields: [degreeId], references: [id], onDelete: Cascade)

  @@index([degreeId, year, semester])
  @@map("degree_subject_templates")
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  userId    Int?     @map("user_id")
  email     String
  code      String
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")
  
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([email, code])
  @@map("verification_codes")
}

model Subject {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  subjectName String   @map("subject_name")
  credits     Float
  year        Int
  semester    Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  result Result?

  @@index([userId, year, semester])
  @@map("subjects")
}

model Result {
  id         Int      @id @default(autoincrement())
  subjectId  Int      @unique @map("subject_id")
  gradePoint Float    @map("grade_point")
  status     Status   @default(Completed)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  
  subject Subject @relation(fields: [subjectId], references: [id], onDelete: Cascade)

  @@map("results")
}

enum Status {
  Completed
  Incomplete
}
